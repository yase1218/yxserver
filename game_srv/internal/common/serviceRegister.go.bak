func (s *ServiceRegister) ListenKeepAliveChan() {
	lease := clientv3.NewLease(s.cli)
	keepAlive, err := lease.KeepAlive(context.Background(), s.leaseID)
	if err != nil {
		log.Error("keepAlive err", zap.Error(err))
		//log.Errorf("keepAlive faith...")
		return
	}

	go tools.GoSafe("service register loop", func() {
		for {
			res := <-keepAlive
			if res == nil {
				err = s.regiserverServer(int64(publicconst.MAX_SERVER_TTL))
				if err != nil {
					log.Error("ListenKeepAliveChan err", zap.Error(err))
					//log.Errorf("ListenKeepAliveChan err:%v", err)
				} else {
					keepAlive, err = lease.KeepAlive(context.Background(), s.leaseID)
					if err != nil {
						log.Error("keepAlive err", zap.Error(err))
						//log.Errorf("keepAlive faith... err:%v", err)
					}
				}
				log.Error("ListenKeepAliveChan res is nil")
				//log.Errorf("ListenKeepAliveChan res is nil")
			}
		}
	})
}

func (s *ServiceRegister) regiserverServer(ttl int64) error {
	grant, err := s.cli.Grant(context.Background(), ttl)
	if err != nil {
		log.Error("申请租约失败", zap.Error(err))
		//log.Errorf("申请租约失败 err:%v", err)
		return err
	}
	s.leaseID = grant.ID

	// 进行注册 设置服务 并绑定租约
	if _, err := s.cli.Put(context.Background(), s.serviceKey, s.endpoint, clientv3.WithLease(s.leaseID)); err != nil {
		log.Error("服务注册失败", zap.Error(err))
		//log.Errorf("服务注册失败 err:%v", err)
		return err
	}
	return nil
}
